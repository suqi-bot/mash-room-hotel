# 🤖 AI数字人配置示例
# 复制此文件为 .env.local 并填入您的真实API密钥

# ===========================================
# 数字人平台配置
# ===========================================

# D-ID平台配置（推荐）
# 注册地址：https://www.d-id.com/
VUE_APP_DID_API_KEY=your_did_api_key_here

# HeyGen平台配置（备选）
# 注册地址：https://www.heygen.com/
VUE_APP_HEYGEN_API_KEY=your_heygen_api_key_here

# ===========================================
# AI对话平台配置
# ===========================================

# OpenAI配置（推荐）
# 注册地址：https://platform.openai.com/
VUE_APP_OPENAI_API_KEY=your_openai_api_key_here
VUE_APP_OPENAI_MODEL=gpt-3.5-turbo

# Claude配置（备选）
# 注册地址：https://console.anthropic.com/
VUE_APP_CLAUDE_API_KEY=your_claude_api_key_here

# 百度文心一言配置（国内推荐）
# 注册地址：https://cloud.baidu.com/
VUE_APP_BAIDU_API_KEY=your_baidu_api_key_here
VUE_APP_BAIDU_SECRET_KEY=your_baidu_secret_key_here

# ===========================================
# 语音服务配置
# ===========================================

# 百度语音识别配置
VUE_APP_BAIDU_ASR_API_KEY=your_baidu_asr_api_key_here
VUE_APP_BAIDU_ASR_SECRET_KEY=your_baidu_asr_secret_key_here

# 腾讯云语音配置
VUE_APP_TENCENT_SECRET_ID=your_tencent_secret_id_here
VUE_APP_TENCENT_SECRET_KEY=your_tencent_secret_key_here

# Azure语音配置
VUE_APP_AZURE_SPEECH_KEY=your_azure_speech_key_here
VUE_APP_AZURE_SPEECH_REGION=your_azure_region_here

# ===========================================
# 数字人形象配置
# ===========================================

# 数字人头像图片URL（建议使用您自己的形象）
VUE_APP_AVATAR_IMAGE_URL=https://your-domain.com/avatar.jpg

# HeyGen数字人ID（如果使用HeyGen）
VUE_APP_HEYGEN_AVATAR_ID=your_avatar_id_here

# ===========================================
# 功能开关配置
# ===========================================

# 启用语音输入
VUE_APP_ENABLE_VOICE_INPUT=true

# 启用视频输出
VUE_APP_ENABLE_VIDEO_OUTPUT=true

# 启用缓存
VUE_APP_ENABLE_CACHE=true

# ===========================================
# 性能配置
# ===========================================

# 视频质量 (low/medium/high)
VUE_APP_VIDEO_QUALITY=medium

# 最大视频长度（秒）
VUE_APP_MAX_VIDEO_LENGTH=30

# API请求超时时间（毫秒）
VUE_APP_API_TIMEOUT=30000

# ===========================================
# 调试配置
# ===========================================

# 启用调试模式
VUE_APP_DEBUG_MODE=false

# 启用API日志
VUE_APP_ENABLE_API_LOGS=false

# 模拟模式（用于开发测试，不调用真实API）
VUE_APP_MOCK_MODE=false
